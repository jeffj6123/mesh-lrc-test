{
  "name": "myapp",
  "properties": {
    "description": "Helloworldseabreeze!",
    "services": [
      {
        "name": "myFrontendService",
        "properties": {
          "osType": "windows",
          "description": "Seabreezefrontend",
          "codePackages": [
            {
              "name": "frontend",
              "image": "mesh-python-frontend:v1",
              "imageRegistryCredential": {
                "server": "sftestcontainerreg.azurecr.io",
                "username": "sftestcontainerreg",
                "password": "containerRepositoryPassword"
              },
              "endpoints": [
                {
                  "name": "publicListener",
                  "port": "3030"
                }
              ],
              "environmentVariables": [
                {
                  "name": "frontendport",
                  "value": "3030"
                },
                {
                  "name": "sendendpoint",
                  "value": "http://myBackendService:3031"
                },
                {
                  "name": "backendreplicacount",
                  "value": "3"
                },
                {
                  "name": "version",
                  "value": "1"
                },
                {
                  "name": "replicadelimiter",
                  "value": "-"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "1",
                  "memoryInGB": "0.2"
                }
              }
            }
          ],
          "replicaCount": "1"
        }
      },
      {
        "name": "myBackendService",
        "properties": {
          "description": "Seabreezebackend",
          "osType": "windows",
          "codePackages": [
            {
              "name": "backend",
              "image": "mesh-python-backend:v1",
              "imageRegistryCredential": {
                "server": "sftestcontainerreg.azurecr.io",
                "username": "sftestcontainerreg",
                "password": "containerRepositoryPassword"
              },
              "endpoints": [
                {
                  "name": "publicListener",
                  "port": "3031"
                }
              ],
              "environmentVariables": [
                {
                  "name": "backendport",
                  "value": "3031"
                }
              ],
              "resources": {
                "requests": {
                  "cpu": "1",
                  "memoryInGB": "0.3"
                }
              }
            }
          ],
          "replicaCount": "3"
        }
      }
    ]
  }
}